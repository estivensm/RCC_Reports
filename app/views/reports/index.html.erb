<script>
 $('.sh').val(<%=params[:search]%>) ;
 $('.sh1').val(<%=params[:search1]%>) ;  
 $('.sh2').val(<%=params[:search2]%>) ;
 $('.sh3').val(<%=params[:search3]%>) ;  


</script>
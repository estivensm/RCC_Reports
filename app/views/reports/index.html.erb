<%- model_class = Report -%>
<div class="page-header">
   <div class="row">
      <div class="col-md-3">
         <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
      </div>
      <div class="col-md-6 text-right">
        <%= will_paginate @reports%>
      </div>
       <div class="col-md-3 text-right">
         <%= link_to "New Report",new_report_path,
            :class => 'btn btn-primary' %>
      </div>
   </div>
</div>
 
<div class="row busqueda">
   <div class="col-md-12">
      <%= form_tag(@route, :method => "get", id: "search-form") do %>
      <%= select_tag 'search', options_for_select(["LYCRA®fiber", "Nylon", "Elaspan ®", "T400"]),{:class => 'form-control sh', include_blank: true }%>
      <%=select_tag 'search1', options_for_select(Customer.all.collect{ |u| ["#{u.name}", u.id, ] }),{:class => "form-control sh1", include_blank: true }%>
       <%=select_tag 'search2', options_for_select(Plant.all.collect{ |u| ["#{u.name}", u.id, ] }),{:class => "form-control sh2", include_blank: true }%>
      <%= text_field_tag :search3, params[:search3], placeholder: "Reporter", class: "form-control search" %>
      
      <%= submit_tag "Buscar", :class => "btn btn-primary sh3" %>
      <%= link_to "Cancelar",reports_path, :class => "pdd1" %>
      <% end %>
   </div>
</div>
<table class="table table-striped">
   <thead>
      <tr>
         <th><%= model_class.human_attribute_name(:code) %></th>
         <th><%= model_class.human_attribute_name(:product_name) %></th>
         <th><%= model_class.human_attribute_name(:autor) %></th>
         <th><%= model_class.human_attribute_name(:customer_report_date) %>
         <th><%= model_class.human_attribute_name(:customer_id) %></th>
         <th>Plant</th>
         <th><%= model_class.human_attribute_name(:reporter) %></th>
         <th>Seguimiento</th>
         <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
   </thead>
   <tbody>
      <% @reports.each do |report| %>
      <tr>
         <td><%= report.code %></td>
         <td><%= report.product_name %></td>
         <td><%= report.autor %></td>
         <td><%= report.customer_report_date ? get_date(report.customer_report_date) : report.customer_report_date %></td>
         <td><%= report.customer.name %></td>
         <td><%= report.plant.name if report.plant %></td>
         <td><%= report.reporter %></td>
         <td><%=link_to "Tracings",
            seguimientos_all_path(report.id), :class => 'btn btn-primary btn-xs' %></td>
         <td><%= link_to report_path(report, :format => "pdf"), target: '_blank',  :rel => "tooltip", :title => "Pdf", :class => 'opciones2' do %>
         <i class="fa fa-file-pdf-o" style= "font-size:20px;padding:5px;" aria-hidden="true"></i><%end%>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
               edit_report_path(report), :class => 'btn btn-default btn-xs' %>
               <%= link_to 'show',
               report_path(report), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
               report_path(report),
               :method => :delete,
               :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
               :class => 'btn btn-xs btn-danger' %>
         </td>
      </tr>
      <% end %>
   </tbody>
</table>

<%- model_class = Report -%>
<div class="page-header">
   <div class="row">

      <div class = "col-md-6">
            <p class="title-h2" style="margin: 9px; font-size: 33px;"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %> <span class="label label-primary"><%=@reports.count%></span> </p>
         </div>

       <div class="col-md-6 text-right">
         <%= link_to "New Report",new_report_path,
            :class => 'btn btn-primary' %>
      </div>
   </div>
</div>


<div class="row busqueda">
   <div class="col-md-12" style="padding: 0px; padding-left: 10px;">

      <%= form_tag(@route, :method => "get", id: "search-form") do %>
      <%= select_tag 'search', options_for_select(["LYCRA®fiber", "Nylon", "Elaspan ®", "T400"]),{:class => 'form-control sh', include_blank: true }%>

      <%= select_tag 'search4', options_for_select(Merge.all.collect{ |u| ["#{u.name}", u.id, ] }),{:class => "form-control sh4", include_blank: true }%>

      <%= select_tag 'search6', options_for_select(FilamentCount.all.collect{ |u| ["#{u.name}", u.id, ] }),{:class => "form-control sh7", include_blank: true }%>

      <%= select_tag 'search5', options_for_select(YarnType.all.collect{ |u| ["#{u.name}", u.id, ] }),{:class => "form-control sh5", include_blank: true }%>

      <%=select_tag 'search1', options_for_select(Customer.all.collect{ |u| ["#{u.name}", u.id, ] }),{:class => "form-control sh1", include_blank: true }%>

      <%= select_tag 'search2', options_for_select(Plant.all.collect{ |u| ["#{u.name}", u.id, ] }),{:class => "form-control sh6", include_blank: true }%>
                  <%= button_tag class: "btn btn-primary sh3" do %>
               <i class="fas fa-search" style=""></i>
            <% end -%>
      <div class="col-md-1" style="padding: 0px; width: 10px; float: right;">
        <label data-toggle="collapse" data-target="#demo" style="border: none; width: 14px; margin: 0px;"><i class="fas fa-angle-down" style="font-size: 20px; color: #EF5400;"></i></label>
      </div>
      <div class="container" style="padding: 0px; margin: 0px;">
         <div id="demo" class="collapse">

<%= text_field_tag :search3, params[:search3], placeholder: "Reporter", class: "form-control search", style: "margin-top: 10px;" %>

         </div>
      </div>

      <%= link_to "Cancelar Filtro",reports_path, :class => "pdd1", :style => "display: none;" %>
      <% end %>

   </div>
</div>


<table class="table table-striped">
   <thead>
      <tr>
         <th><%= model_class.human_attribute_name(:code) %></th>
         <th><%= model_class.human_attribute_name(:product) %></th>
         <th>Merge</th>
         <th>Filament count</th>
         <th>Yarn type</th>
         <th><%= model_class.human_attribute_name(:customer_report_date) %>
         <th><%= model_class.human_attribute_name(:customer_id) %></th>
         <th>Plant</th>
         <th><%= model_class.human_attribute_name(:reporter) %></th>
         <th>Seguimiento</th>
         <th style="text-align: center;"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
   </thead>
   <tbody>
      <% @reports.each do |report| %>
      <tr>
         <td><%= report.code %></td>
         <td><%= report.product_name %></td>
         <td><%= report.merge.name%></td>
         <td><%= report.filament_count.name%></td>
         <td><%= report.yarn_type.name if report.yarn_type %></td>
         <td><%= report.customer_report_date ? get_date(report.customer_report_date) : report.customer_report_date %></td>
         <td><%= report.customer.name if report.customer %></td>
         <td><%= report.plant.name if report.plant %></td>
         <td><%= report.reporter  %></td>
         <td  style="width: 1px; padding: 0px; padding-top: 10px; padding-left: 18px;"><%=link_to "Tracings",seguimientos_all_path(report.id), :class => 'btn btn-primary btn-xs' %></td>
         <td>
            <div class="btn-group" style="float: right;">
               <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: #EC5C00; border: none;"><i class="fas fa-list"></i>  <i class="fas fa-sort-down" style="font-size: 19px;"></i>

               </button>
                    
            <div class="dropdown-menu dropdown-menu-right" style="font-size: 14px; min-width: 146px;"  >
               <ul style="padding: 0px; margin: 0px !important;">
                  
                  <ol style="padding-left: 10px;">
                     <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_report_path(report), :class => 'btn btn-default btn-xs' %>     
                  </ol>

                  <ol>
                     <%= link_to 'Mostrar',
                        report_path(report), :class => 'btn btn-default btn-xs' %>
                  </ol>
                         
                  <ol>
                     <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        report_path(report),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>           
               </ol>
             </ul>
           </div>
         </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-md-6 text-right">
   <%= will_paginate @reports%>
</div>





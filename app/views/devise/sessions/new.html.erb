
<div class="container" style="margin-top: 70px;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="thumbnail">
        <h1 align="center"><img style = "width:180px;" src="https://c2.staticflickr.com/4/3847/32895283364_180dc048d6_o.png" alt=""></h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="col-md-12" style="padding: 0px;">
              <%= f.label :email %>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fas fa-user" ></i></span>
                   <%= f.email_field :email, autofocus: true, class: "form form-control" %>
                </div>
                <br>
            </div>

            <div class="col-md-12" style="padding: 0px;">
              <%= f.label :password %>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fas fa-unlock-alt"></i></span>
                   <%= f.password_field :password, autocomplete: "off", class: "form form-control"  %>
                </div>
                <br>
            </div>

            <div class="actions text-center">
              <%= f.button "Iniciar SesiÃ³n", class: "btn btn-warning btn-block"%>
            </div>

            <br>
        <% end %>
      </div>
    </div>
  </div>
</div>



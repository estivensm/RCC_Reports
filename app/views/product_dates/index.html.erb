<p id="notice"><%= notice %></p>

<h1>Product Dates</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Date</th>
      <th>Report</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_dates.each do |product_date| %>
      <tr>
        <td><%= product_date.number %></td>
        <td><%= product_date.date %></td>
        <td><%= product_date.report.id %></td>
        <td><%= link_to 'Show', product_date %></td>
        <td><%= link_to 'Edit', edit_product_date_path(product_date) %></td>
        <td><%= link_to 'Destroy', product_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

